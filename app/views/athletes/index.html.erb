<p id="notice"><%= notice %></p>

<h1>Athletes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nationality</th>
      <th>Sport</th>
      <th>Edition</th>
      <th>Number of medals</th>
      <th>Gold</th>
      <th>Silver</th>
      <th>Bronze</th>
      <th>Number of paticipations</th>
      <th>First participation</th>
      <th>Year of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= athlete.name %></td>
        <td><%= athlete.nationality %></td>
        <td><%= athlete.sport %></td>
        <td><%= athlete.edition %></td>
        <td><%= athlete.number_of_medals %></td>
        <td><%= athlete.gold %></td>
        <td><%= athlete.silver %></td>
        <td><%= athlete.bronze %></td>
        <td><%= athlete.number_of_paticipations %></td>
        <td><%= athlete.first_participation %></td>
        <td><%= athlete.year_of_birth %></td>
        <td><%= link_to 'Show', athlete %></td>
        <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
        <td><%= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

